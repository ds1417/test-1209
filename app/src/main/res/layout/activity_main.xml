<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daseul1.myapplication5.MainActivity"
    android:weightSum="1">

    <TextView
        android:text="reservation time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8" />

    <Switch
        android:text="Switch"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:id="@+id/switch1" />

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="adult(15000)"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:id="@+id/textView"
            android:layout_weight="0.87" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="0.64" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="child(8000)"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/textView3"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_weight="1" />

        <TextView
            android:text="youth(12000ì›)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <RadioGroup
            android:id="@+id/RadioGroup"
            android:layout_width="201dp"
            android:layout_height="132dp"
            android:weightSum="1"
            android:layout_weight="0.56">

            <RadioButton
                android:text="basis discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"/>


            <RadioButton
                android:text="cash discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"/>

            <RadioButton
                android:text="membership discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                app:srcCompat="@android:drawable/sym_def_app_icon"
                android:id="@+id/imageView" />

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:text="reservation finish" />

        <Button
            android:text="Time"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

        <TextView
            android:text="num:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="extended price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@color/colorAccent" />

        <TextView
            android:text="extended price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="@android:color/holo_green_dark" />
    </LinearLayout>

</LinearLayout>
